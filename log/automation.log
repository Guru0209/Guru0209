# logger.py

import logging
from config import Config

# Configure logging
logging.basicConfig(level=Config.LOG_LEVEL,
                    format='%(asctime)s - %(levelname)s - %(message)s',
                    filename=Config.LOG_PATH,
                    filemode='w')

# Define a logger
logger = logging.getLogger(__name__)

